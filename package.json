{
  "name": "upt-www",
  "version": "0.0.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "live": "nodemon index.js --watch ./core/",
    "mongo": "mongod --dbpath ./mongo/ --bind_ip 127.0.0.1",
    "start": "node ./index.js",
    "dump": "mongodump -d upt --excludeCollection sessions --excludeCollection exercise_verifiers --excludeCollection quiz_verifiers --excludeCollection users --excludeCollection solved_exercises --excludeCollection exercise_revisions",
    "backup": "mongodump -d upt -o backup",
    "restore": "mongorestore -d upt dump/upt",
    "clean": "rm -r dump",
    "pretty": "prettier --write --tab-width 2 \"core/**/*.js\"",
    "precommit": "lint-staged"
  },
  "author": "Kerdo",
  "license": "ISC",
  "lint-staged": {
    "*.js": [
      "npm run pretty",
      "git add"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^8.2.0",
    "ejs": "^2.6.1",
    "ejs-lint": "^1.1.0",
    "express": "^4.17.1",
    "firebase": "^7.17.1",
    "firebase-admin": "^11.4.1",
    "lodash": "^4.17.19",
    "mathjax-node": "^2.1.1",
    "moment": "^2.27.0",
    "mongodb": "^3.5.9",
    "mongoose": "^5.7.5",
    "request": "^2.88.2",
    "showdown": "^1.9.1",
    "sitemap": "^6.2.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^9.5.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  }
}
